<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.client.dgsv.ExamPortal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_above="@+id/btn_next"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginHorizontal="15dp"
            android:textSize="21sp"
            android:text="Akshay"
            android:textAlignment="textEnd"
            android:layout_marginBottom="20dp"
            android:id="@+id/tv_marks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end" />

        <TextView
            android:textSize="21sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/tv_qustion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
        <RadioGroup
            android:id="@+id/rg_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:textSize="18sp"
                android:id="@+id/rd_choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textSize="18sp"
                android:id="@+id/rd_choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textSize="18sp"
                android:id="@+id/rd_choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textSize="18sp"
                android:id="@+id/rd_choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>