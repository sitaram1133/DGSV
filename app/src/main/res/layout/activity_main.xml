<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="akshay.client.exam.MainActivity">




    <ImageView
        android:src="@drawable/namaste"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:id="@+id/textview"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:id="@+id/textSlogan"
        android:text="सरस्वतीं च तां नौमि वागधिष्ठातृदेवताम् ।\n देवत्वं प्रतिपद्यन्ते यदनुग्रहतो जना: ॥"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

   <LinearLayout
       android:background="@drawable/btn_design"
       android:padding="15dp"
       android:layout_marginHorizontal="50dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:textStyle="bold"
           android:fontFamily="@font/niceyear"
           android:textSize="18sp"
           android:layout_marginTop="20dp"
           android:textAlignment="center"
           android:text="@string/exam_portal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal" />

       <Spinner
           android:layout_margin="10dp"
           android:background="@drawable/carddesign"
           android:layout_marginTop="35dp"
           android:layout_marginHorizontal="20dp"
           android:id="@+id/spinner"
           android:padding="0dp"
           style="@style/ShapeAppearance.MaterialComponents.MediumComponent"
           android:layout_width="match_parent"
           android:layout_height="40dp"/>

       <EditText
           android:inputType="text"
           android:maxLines="1"
           android:maxLength="10"
           android:fontFamily="@font/niceyear"
           android:layout_marginTop="20dp"
           android:layout_marginHorizontal="20dp"
           android:drawableStart="@drawable/ic_baseline_assignment_ind_24"
           android:drawablePadding="10dp"
           android:hint="@string/enter_id"
           android:id="@+id/examsessionid"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:drawableLeft="@drawable/ic_baseline_assignment_ind_24" />
       <Button
           android:textColor="@android:color/white"
           android:textStyle="bold"
           android:padding="5dp"
           android:background="@drawable/btn_design_dark"
           android:id="@+id/btnstart"
           android:layout_marginTop="20dp"
           android:layout_gravity="center"
           android:text="@string/start_exam"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>

    <ProgressBar
        android:id="@+id/mainprogressbar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
            <TextView
                android:id="@+id/sessioncode"
                android:text=""
                android:elevation="5dp"
                android:textColor="@android:color/holo_green_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sessioncodena"
            android:text="No Session Available"
            android:elevation="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>